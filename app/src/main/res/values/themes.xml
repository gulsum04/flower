        <item name="android:colorBackground">@color/background</item>

        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="App.Main">
        <item name="android:windowBackground">@color/launcher_background</item>
    </style>

    <style name="TabLayout.ProductCategory" parent="Widget.Material3.TabLayout">
        <item name="tabIconTint">@null</item>
        <item name="tabGravity">start</item>
        <item name="tabMode">scrollable</item>
        <item name="tabBackground">@null</item>
        <item name="tabIndicator">@null</item>
        <item name="tabRippleColor">@null</item>
    </style>

    <style name="ShapeAppearance.Launcher" parent="ShapeAppearance.Material3.Corner.ExtraLarge">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="ShapeAppearance.Profile" parent="ShapeAppearance.Material3.Corner.ExtraLarge">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>
